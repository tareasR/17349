# Maria DB
docker run -it --rm --name rafael -p 8080:3306 
--env MARIADB_ROOT_PASSWORD=1234 
--security-opt seccomp=unconfined 
-v ~/17289/datos:/var/lib/mysql  mariadb:noble

# Spring boot

1. curl -G https://start.spring.io/starter.zip -o demo.zip -d type=maven-project
2. unzip demo.zip 
3. docker pull openjdk:26-oraclelinux9
4. docker run -it -v /root:/app openjdk:26-oraclelinux9 sh
5. cd /app
6. ./mvnw spring-boot:run 
7. exit
8. curl -G https://start.spring.io/starter.zip -o demo.zip -d type=maven-project -d dependencies=web
9. docker run -it -p 8080:8080 -v /root:/app openjdk:26-oraclelinux9 sh